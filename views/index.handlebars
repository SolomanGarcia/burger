<div class="container">

  <div class="jumbotron">
    <h1 id="color-override">Eat Da Burger</h1>
    <p id="color-override">Make Da burger, eat Da burger.</p>
    <br>
    <h2 id="color-override">Make Da Burger</h2>
    <panel>
      <form class="create-form">
        <div class="form-group">
          <input type="text" id="newburger" name="burger">
         
          <button type="submit" class="btn btn-success" id="addburger"><span class="fas fa-hamburger"></span></button>
        </div>
      </form>
    </panel>
  </div>

  <div class="row">
    
    <div class="col-sm-6">
      <div class="panel panel-default">
        <div class="panel-heading" id="lefthead"><strong>Eat Dat Burger</strong></div>
        <div class="panel-body">
          <ul>
            {{#each burgers}}
            {{#unless devoured}}
            <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
            <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}"
              data-newDevoured="{{devour}}"><span><span class="fas fa-hamburger"></span>></span></button>
            <hr>
            {{/unless}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
    
    <div class="col-sm-6">
      <div class="panel panel-default">
        <div class="panel-heading" id="righthead"><strong>Devoured Burgers</strong></div>
        <div class="panel-body">
          <ul>
            {{#each burgers}}
            {{#if devoured}}
            <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
            <button type="button" class="trashburger btn btn-danger" id="trashbutton" data-id="{{this.id}}"
              data-newDevoured="{{devour}}"><span class="fas fa-trash"></span></button>
            <hr>
            {{/if}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>

</div>